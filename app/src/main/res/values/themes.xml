<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cropspt_final" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#BBE38D</item>
        <item name="colorPrimaryVariant">#E3FFDE</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1D4F11</item>
        <item name="colorSecondaryVariant">#2A6E1B</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="Theme.App.SplashScreen." parent="Base.Theme.SplashScreen"/>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimationDuration">@color/lightGreen</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/cropspt_logo</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.SplashScreen</item>

    </style>
</resources>